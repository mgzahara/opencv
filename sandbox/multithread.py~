import thread
import time

def newThreadAction(threadName, start, interval, stop):
    global val
    print "start of ", threadName
    print "\tstart:    ", start
    print "\tinterval: ", interval
    print "\tstop:     ", stop
    print "\tval:      ", val

    val = not val
    print "\tnot val:  ", val

    for i in range(start, stop, interval):
        print threadName, " @ ", time.ctime(time.time())

val = True
print "intro  - val: ", val
thread.start_new_thread(newThreadAction, ("Matt", 0, 1, 10) )
print "first  - val: ", val
thread.start_new_thread(newThreadAction, ("Sarah", 1, 1, 5) )
print "second - val: ", val
thread.start_new_thread(newThreadAction, ("Jared", 3, 2, 19) )
print "third  - val: ", val

while(True):
    pass
